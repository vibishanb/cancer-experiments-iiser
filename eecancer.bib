journal = {Cell {\&} Bioscience},
keywords = {Apoptosis,Inflammation,Necrosis,Programmed cell death,Regeneration,Scar,Senescence,Stress induced cell death},
month = {dec},
number = {1},
pages = {6},
title = {{There are only four basic modes of cell death, although there are many ad-hoc variants adapted to different situations}},
url = {https://cellandbioscience.biomedcentral.com/track/pdf/10.1186/s13578-018-0206-6?site=cellandbioscience.biomedcentral.com https://cellandbioscience.biomedcentral.com/articles/10.1186/s13578-018-0206-6},
