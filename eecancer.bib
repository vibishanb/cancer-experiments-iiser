file = {:home/vibishan/PhD/Research/all{\_}reading/Osborne, Hobbs, Clark{\_}1985{\_}Effect of Estrogens and Antiestrogens on Growth of Human Breast Cancer Cells in Athymic Nude Mice1.pdf:pdf},
